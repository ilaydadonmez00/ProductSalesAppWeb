@{
    ViewData["Title"] = "Products";
    var products = ViewBag.Products as List<ProductSalesApp.Models.Product>;
}

<div class="container my-4">
    <h1 class="mb-4 text-center">Products</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var p in products)
        {
            <div class="col" id="product-@p.Barcode">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text mb-1"><strong>Price:</strong> @p.UnitPrice TL</p>
                        <p class="card-text mb-1"><strong>Stock:</strong> @p.Quantity</p>
                        <form asp-action="AddToCart" method="post" class="mt-auto add-to-cart-form">
                            <input type="hidden" name="barcode" value="@p.Barcode" />
                            <div class="input-group mb-2">
                                <input type="number" name="quantity" value="1" min="1" max="@p.Quantity" class="form-control" style="max-width:80px;" />
                                <button type="submit" class="btn btn-success">Add to Cart</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr class="my-5" />

    <h2 class="mb-3">🛒 Shopping Cart</h2>
    <div id="cart-container">
        @await Html.PartialAsync("_CartPartial")
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".add-to-cart-form").forEach(form => {
                form.addEventListener("submit", function (e) {
                    e.preventDefault();

                    const formData = new FormData(form);

                    fetch(form.action, {
                        method: "POST",
                        body: formData
                    })
                    .then(() => {
                        // Alttaki cart güncelle
                        fetch('/Sales/GetCartPartial')
                        .then(response => response.text())
                        .then(html => {
                            document.getElementById("cart-container").innerHTML = html;
                        });

                        // Sağ üstteki cart summary güncelle
                        fetch('/Sales/GetCartSummary')
                        .then(response => response.text())
                        .then(html => {
                            document.getElementById("cart-summary").innerHTML = html;
                        });

                        // Toast göster
                        const toastEl = document.getElementById('successToast');
                        const toast = new bootstrap.Toast(toastEl);
                        toast.show();
                    })
                    .catch(error => {
                        console.error("Error:", error);
                    });
                });
            });
        });
    </script>
}








