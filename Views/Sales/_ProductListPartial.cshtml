@{
    var products = ViewBag.Products as List<ProductSalesApp.Models.Product>;
}

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var p in products)
    {
        <div class="col" id="product-@p.Barcode">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@p.Name</h5>
                    <p class="card-text mb-1"><strong>Price:</strong> @p.UnitPrice TL</p>
                    <p class="card-text mb-1"><strong>Stock:</strong> @p.Quantity</p>
                    <form asp-action="AddToCart" method="post" class="mt-auto add-to-cart-form">
                        <input type="hidden" name="barcode" value="@p.Barcode" />
                        <div class="input-group mb-2">
                            <input type="number" name="quantity" value="1" min="1" max="@p.Quantity" class="form-control" style="max-width:80px;" />
                            <button type="submit" class="btn btn-success" @(p.Quantity == 0 ? "disabled" : "")>Add to Cart</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
